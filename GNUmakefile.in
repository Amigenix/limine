.PHONY: common-bios
common-bios: $(call MKESCAPE,$(SRCDIR))/stivale
	$(MAKE) -C '$(call SHESCAPE,$(SRCDIR))/common' all TARGET=bios BUILDDIR='$(call SHESCAPE,$(BUILDDIR))/common-bios'

